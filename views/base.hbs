{{!-- views/base.hbs --}}

<div class="users-page-container">
  <div class="header-section">
    <h1 class="page-title">База пользователей</h1>

    <div class="filter-search-wrapper">
      <div class="input-field role-filter-wrapper">
        <select id="role-filter">
          <option value="">Все роли</option>
          <option value="admin">Администраторы</option>
          <option value="user">Пользователи</option>
        </select>
        <label>Фильтр по роли</label>
      </div>

      <div class="search-container input-field">
        <input id="search" type="text" placeholder="Поиск пользователей...">
      </div>
    </div>
  </div>

  <div class="divider"></div>

  <div class="users-table card-panel white lighten-1">
    <table class="highlight responsive-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Имя</th>
          <th>Email</th>
          <th>Телефон</th>
          <th>Кол-во заказов</th>
          <th>Роль</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#each base}}
        <tr>
          <td>{{ID}}</td>
          <td>{{user_fullname}}</td>
          <td><a href="mailto:{{email}}">{{email}}</a></td>
          <td><a href="tel:{{telphone}}">{{telphone}}</a></td>
          <td>
            {{#if (eq orders 0)}}
              Нет заказов
            {{else}}
              {{orders}} {{pluralize orders "заказ" "заказа" "заказов"}}
            {{/if}}
          </td>
          <td><span class="status-badge {{role}}">
            {{#if (eq role 1)}}
              {{lookupStatusLabel "Администратор"}}
            {{else}}
              {{lookupStatusLabel "Пользователь"}}
            {{/if}}
            </span></td>
          <td>
            <a class="btn-flat waves-effect tooltipped" data-tooltip="Удалить" data-position="top" data-id="{{ID}}">
              <i class="material-icons">delete</i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div id="delete-modal" class="modal">
  <div class="modal-content">
    <h4>Подтверждение удаления</h4>
    <p>Вы уверены, что хотите удалить этого пользователя?</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Отмена</a>
    <a href="#!" class="waves-effect waves-red btn-flat">Удалить</a>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
  M.AutoInit();

  const tooltips = document.querySelectorAll('.tooltipped');
  M.Tooltip.init(tooltips);

  const modal = document.querySelectorAll('.modal');
  M.Modal.init(modal);
    // Фильтр по роли
    const roleFilter = document.getElementById('role-filter');
    const searchInput = document.getElementById('search');
    const rows = Array.from(document.querySelectorAll('tbody tr'));

    function applyFilters() {
      const role = roleFilter.value.toLowerCase();
      const search = searchInput.value.toLowerCase();

      rows.forEach(row => {
        const text = row.innerText.toLowerCase();
        const userRole = row.querySelector('.status-badge')?.textContent.toLowerCase() || '';
        const matchRole = !role || userRole === role;
        const matchSearch = !search || text.includes(search);
        row.style.display = (matchRole && matchSearch) ? '' : 'none';
      });
    }

    roleFilter.addEventListener('change', applyFilters);
    searchInput.addEventListener('input', applyFilters);
  // Открытие модального окна + сохранение ID пользователя
  let userIdToDelete = null;

  document.querySelectorAll('.btn-flat .material-icons').forEach(btn => {
    if (btn.textContent.trim() === 'delete') {
      const link = btn.closest('a');
      const userId = link.dataset.id;

      link.addEventListener('click', function (e) {
        e.preventDefault();
        userIdToDelete = userId;

        const instance = M.Modal.getInstance(document.getElementById('delete-modal'));
        instance.open();
      });
    }
  });

  // Обработка клика по кнопке "Удалить"
  document.querySelector('#delete-modal a.waves-red').addEventListener('click', async function () {
    if (!userIdToDelete) return;

    try {
      const response = await fetch('/delete-user', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ id: userIdToDelete })
      });

      if (response.redirected) {
        window.location.href = response.url; // Перенаправление после успешного удаления
      } else {
        const result = await response.text();
        if (result === 'OK') {
          window.location.reload(); // Или лучше перейти на /users
        } else {
          alert('Ошибка при удалении');
        }
      }
    } catch (error) {
      console.error('Ошибка:', error);
      alert('Произошла ошибка при удалении пользователя');
    }
  });
});
</script>

